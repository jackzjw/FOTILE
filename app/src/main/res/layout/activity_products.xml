<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.sg280.fotile.widget.XinOuterScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/activity_product_child_0"/>
            <include layout="@layout/activity_product_child_1"/>
        </LinearLayout>

    </com.example.sg280.fotile.widget.XinOuterScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/navi_home_gray"
            android:id="@+id/img_home"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/img_cart_bottom"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/navi_cart_gray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="@string/add_cart"
            android:gravity="center"
            android:id="@+id/tv_add_cart"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@color/add_cart_bg"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="@string/buy_now"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/tv_buy_now"
            android:background="@color/theme_red"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>