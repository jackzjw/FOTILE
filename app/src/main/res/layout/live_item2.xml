<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/live_img1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/live_type2_shape"

            >

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_status"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/live_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_img1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/live_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_name"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textSize="11sp"/>

</LinearLayout>