<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="120dp"
            android:text="Â¥ 1480"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/chunhei"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/hui_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/standard"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@color/white"/>
        <com.jude.easyrecyclerview.EasyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.jude.easyrecyclerview.EasyRecyclerView>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0.7dp"
            android:background="@color/white">
            <TextView
                style="@style/my_word_14_black_style"
                android:text="@string/number"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_goods_numbers">

                <TextView
                    style="@style/my_word_16_black_style"
                    android:layout_centerInParent="true"
                    android:text="1" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/shape_red_circle_add"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_gray_circle_subtract"
                    android:gravity="center"
                    android:text="@string/subtract"
                    android:textColor="@color/hui_line"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:text="@string/sure_"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
